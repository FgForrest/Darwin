<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
	   	>

	<bean id="dbAutoUpdater" class="one.edee.darwin.AutoUpdater">
		<property name="locker" ref="locker"/>
		<property name="skipIfDataSourceNotPresent" value="true"/>
		<property name="componentDescriptor">
			<bean class="one.edee.darwin.AutoUpdaterInfo">
				<property name="componentName" value="lib_db_autoupdate"/>
				<property name="componentVersion" value="3.0"/>
			</bean>
		</property>
		<property name="resourceAccessor" ref="dbAutoUpdateResourceAccessor"/>
	</bean>

	<bean id="locker" class="one.edee.darwin.Locker">
		<property name="skipIfDataSourceNotPresent" value="true"/>
		<property name="resourceAccessor" ref="dbAutoUpdateResourceAccessor"/>
		<property name="inSeparateTransaction" value="false"/>
	</bean>

	<bean id="dbAutoUpdateResourceAccessor" class="one.edee.darwin.resources.DefaultResourceAccessor">
		<property name="resourcePath" value="classpath:/META-INF/lib_db_autoupdate/sql/"/>
	</bean>

</beans>