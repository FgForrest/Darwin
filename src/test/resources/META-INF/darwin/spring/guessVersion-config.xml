<?xml version="1.0" encoding="windows-1250"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="dbAutoUpdateResourceMatcher" class="one.edee.darwin.resources.DefaultResourceMatcher"/>

	<bean id="dbAutoUpdateResourceNameAnalyzer" class="one.edee.darwin.resources.DefaultResourceNameAnalyzer"/>

	<bean id="dbAutoStorageCheckerToTest" class="one.edee.darwin.storage.DefaultDatabaseStorageChecker">
		<constructor-arg>
			<bean class="one.edee.darwin.resources.ResourcePatchMediator">
				<constructor-arg index="0" ref="dbAutoUpdateResourceMatcher"/>
				<constructor-arg index="1" ref="dbAutoUpdateResourceNameAnalyzer"/>
			</bean>
		</constructor-arg>
		<property name="dataSource" ref="dataSource"/>
		<property name="resourceAccessor" ref="dbAutoUpdateResourceAccessor4Test"/>
		<property name="resourceMatcher" ref="dbAutoUpdateResourceMatcher"/>
		<property name="resourceNameAnalyzer" ref="dbAutoUpdateResourceNameAnalyzer"/>
	</bean>

    <bean id="dbAutoUpdateResourceAccessor4Test" class="one.edee.darwin.resources.ResourceAccessorForTest">
        <property name="resourcePath" value="classpath:/META-INF/darwin/sql/"/>
	</bean>

</beans>