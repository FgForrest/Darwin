<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns="http://www.springframework.org/schema/beans"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
		>
	<bean id="darwinInfo" class="one.edee.darwin.model.SchemaVersion">
		<property name="componentName" value="${pom.artifactId}"/>
		<property name="componentVersion" value="${pom.version}"/>
	</bean>

	<bean id="darwin" class="one.edee.darwin.Darwin" lazy-init="true">
		<property name="locker" ref="locker"/>
		<property name="skipIfDataSourceNotPresent" value="true"/>
		<property name="componentDescriptor" ref="darwinInfo"/>
		<property name="resourceAccessor" ref="darwinResourceAccessor"/>
		<property name="darwinStorage" ref="defaultDatabaseAutoUpdatePersister"/>
	</bean>

	<bean id="locker" class="one.edee.darwin.locker.Locker">
		<property name="skipIfDataSourceNotPresent" value="true"/>
		<property name="resourceAccessor" ref="darwinResourceAccessor"/>
	</bean>

	<bean id="darwinResourceAccessor" class="one.edee.darwin.resources.ResourceAccessorForTest">
		<property name="resourcePath" value="classpath:/META-INF/darwin/sql/"/>
	</bean>
</beans>